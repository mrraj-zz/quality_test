<%- model_class = SecretCode.new.class -%>
<div class="span9">
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th><%= model_class.human_attribute_name(:code) %></th>
        <th><%= model_class.human_attribute_name(:user_id) %></th>
      </tr>
    </thead>
    <tbody>
      <% @secret_codes.each do |secret_code| %>
        <tr>
          <td><%= secret_code.id %></td>
          <td><%= secret_code.code %></td>
          <td><%= secret_code.user.try(:email) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate(@secret_codes) unless @secret_codes.blank? %>
</div>
<div class="span3">
  <%= render "create_n_secret_codes" %>
</div>
